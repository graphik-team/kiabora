<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.lirmm.graphik</groupId>
  <artifactId>kiabora</artifactId>
  <name>fr.lirmm.graphik:kiabora</name>
  <version>1.3.0-SNAPSHOT</version>
  <url>http://graphik-team.github.io/graal/kiabora</url>
  <inceptionYear>2014</inceptionYear>
  <developers>
    <developer>
      <name>Swan ROCHER</name>
      <email>rocher@lirmm.fr</email>
      <organization>INRIA</organization>
    </developer>
    <developer>
      <name>Cl√©ment SIPIETER</name>
      <email>clement@6pi.fr</email>
      <organization>INRIA</organization>
    </developer>
  </developers>
  <scm>
    <developerConnection>scm:git:git@github.com:graphik-team/kiabora.git</developerConnection>
    <url>https://github.com/graphik-team/kiabora</url>
  </scm>
  <organization>
    <name>GraphIK (INRIA - LIRMM)</name>
    <url>https://team.inria.fr/graphik/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>${jdk.version}</source>
          <target>${jdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <preparationGoals>clean install</preparationGoals>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>fr.lirmm.graphik.graal.apps.Kiabora</mainClass>
                  <manifestEntries>
                    <Built-On>${maven.build.timestamp}</Built-On>
                    <Specification-Vendor>${project.organization.name}</Specification-Vendor>
                    <Specification-Title>${project.name}</Specification-Title>
                    <Specification-Version>${project.version}</Specification-Version>
                    <Graal-version>${graal.version}</Graal-version>
                    <JDK-Target-Version>${jdk.version}</JDK-Target-Version>
                  </manifestEntries>
                </transformer>
              </transformers>
              <minimizeJar>true</minimizeJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <graal.version>1.3.0-SNAPSHOT</graal.version>
    <jdk.version>1.6</jdk.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

